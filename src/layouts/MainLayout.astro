---
// src/layouts/MainLayout.astro
import "../styles/global.css"; // uses Tailwindcss
import astroLogo from "../assets/astro.svg";
import background from "../assets/images/404-bg.jpg";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  ogType?: string;
}

const {
  title = "JCCC - Japanese Campus Crusade for Christ",
  description = "一生の友と、一生の成長を。新しい一歩を、ここから",
  image = "/images/og-image.jpg",
  ogType = "website",
} = Astro.props;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/favicon.png" />
    <link rel="apple-touch-icon" href="/images/apple-touch-icon-57x57.png" />
    <link
      rel="apple-touch-icon"
      sizes="72x72"
      href="/images/apple-touch-icon-72x72.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="114x114"
      href="/images/apple-touch-icon-114x114.png"
    />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Crafto styles -->
    <link rel="stylesheet" href="/css/vendors.min.css" />
    <link rel="stylesheet" href="/css/icon.min.css" />
    <link rel="stylesheet" href="/css/style.min.css" />
    <link rel="stylesheet" href="/css/responsive.css" />
    <link rel="stylesheet" href="/css/branding-agency.css" />
    <!-- View Transitions API -->
    <meta name="view-transition" content="same-origin" />

    <!-- Custom Styles -->
    <slot name="head" />
  </head>
  <body class="bg-gray-800 text-gray-900 antialiased">
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <div class="flex min-h-screen flex-col">
      <!-- Navigation -->

      <!-- Main Content -->
      <slot />

      <!-- Footer -->
      <footer class="bg-charcoal-blue text-white">
        <div class="container mx-auto px-4 py-12">
          <div class="grid grid-cols-1 gap-8 lg:grid-cols-4">
            {/* Column 1 - Logo & Description */}
            <div class="space-y-4">
              <a href="/" class="inline-block">
                <img src={astroLogo.src} alt="JCCC Logo" class="h-8" />
              </a>
              <p class="text-gray-400">
                We are providing high-quality courses for about ten years.
              </p>
              <div class="flex space-x-4">
                <a href="#" class="text-gray-400 hover:text-white">Fb.</a>
                <a href="#" class="text-gray-400 hover:text-white">Ig.</a>
                <a href="#" class="text-gray-400 hover:text-white">Tw.</a>
              </div>
            </div>

            {/* Column 2 - Quick Links */}
            <div>
              <h3 class="text-lg font-semibold mb-4">Popular courses</h3>
              <ul class="space-y-2">
                <li>
                  <a href="#" class="text-gray-400 hover:text-white"
                    >Business finance</a
                  >
                </li>
                <li>
                  <a href="#" class="text-gray-400 hover:text-white"
                    >Advanced design</a
                  >
                </li>
                <li>
                  <a href="#" class="text-gray-400 hover:text-white"
                    >Web development</a
                  >
                </li>
                <li>
                  <a href="#" class="text-gray-400 hover:text-white"
                    >Data visualization</a
                  >
                </li>
              </ul>
            </div>

            {/* Column 3 - Contact */}
            <div>
              <h3 class="text-lg font-semibold mb-4">Need help?</h3>
              <ul class="space-y-2">
                <li class="text-gray-400">Call us directly?</li>
                <li>
                  <a href="tel:+1234567890" class="text-white">
                    +1 234 567 8910
                    <span
                      class="ml-2 bg-yellow-500 text-xs text-black px-2 py-1 rounded"
                      >Free</span
                    >
                  </a>
                </li>
                <li class="text-gray-400">Need support?</li>
                <li>
                  <a
                    href="mailto:help@domain.com"
                    class="text-white hover:underline"
                  >
                    help@domain.com
                  </a>
                </li>
              </ul>
            </div>

            {/* Column 4 - Newsletter */}
            <div>
              <h3 class="text-lg font-semibold mb-4">
                Subscribe our newsletter
              </h3>
              <form class="space-y-4">
                <div class="relative">
                  <input
                    type="email"
                    placeholder="Enter your email..."
                    class="w-full px-4 py-2 bg-gray-800 text-white rounded focus:outline-none focus:ring-2 focus:ring-yellow-500"
                  />
                  <button
                    type="submit"
                    class="absolute right-2 top-1/2 transform -translate-y-1/2 text-white hover:text-yellow-500"
                  >
                    Submit
                  </button>
                </div>
                <p class="text-gray-400 text-sm flex items-center">
                  <span class="mr-2">
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                    </svg>
                  </span>
                  Protecting your privacy
                </p>
              </form>
            </div>
          </div>

          {/* Bottom Bar */}
          <div class="border-t border-gray-800 mt-12 pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
              <nav class="space-x-4 mb-4 md:mb-0">
                <a href="/" class="text-gray-400 hover:text-white">Home</a>
                <a href="/about" class="text-gray-400 hover:text-white">About</a
                >
                <a href="/courses" class="text-gray-400 hover:text-white"
                  >Courses</a
                >
                <a href="/instructors" class="text-gray-400 hover:text-white"
                  >Instructors</a
                >
                <a href="/blog" class="text-gray-400 hover:text-white">Blog</a>
                <a href="/contact" class="text-gray-400 hover:text-white"
                  >Contact</a
                >
              </nav>
              <p class="text-gray-400 text-sm">
                &copy; {new Date().getFullYear()} JCCC. All rights reserved.
              </p>
            </div>
          </div>
        </div>
      </footer>
    </div>

    <!-- Initialize theme -->
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
      window.localStorage.setItem("theme", theme);
    </script>

    <!-- Custom scripts -->
    <slot name="scripts" />
  </body>
</html>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }
</style>

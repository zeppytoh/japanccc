---
import BaseHead from "~/components/BaseHead.astro";

// Define props with TypeScript interface
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
}

// Destructure props with default values
const {
  title,
  description = "一生涯の友と一生涯の成長を:日本キャンパスクルセードフォークライスト",
  ogImage = "/images/og-image.jpg",
  canonicalURL = Astro.url.href,
} = Astro.props;
---

<!doctype html>
<html class="no-js" lang="jp">
  <head>
    <BaseHead
      title={title}
      description={description}
      ogImage={ogImage}
      canonicalURL={canonicalURL}
    />
  </head>
  <body
    data-mobile-nav-trigger-alignment="right"
    data-mobile-nav-style="modern"
    data-mobile-nav-bg-color="#313e3b"
  >
    <!-- Main Content Slot -->
    <slot />

    <!-- Start Scroll Progress -->
    <div class="scroll-progress d-none d-xxl-block">
      <a href="#" class="scroll-top" aria-label="scroll">
        <span class="scroll-text">Scroll</span>
        <span class="scroll-line">
          <span class="scroll-point"></span>
        </span>
      </a>
    </div>
    <!-- End Scroll Progress -->

    <!-- JavaScript Libraries -->
    <script is:inline src="/js/jquery.min.js"></script>
    <script is:inline src="/js/vendors.min.js"></script>
    <script is:inline src="/js/main.js"></script>

    <!-- Additional Scripts -->
    <slot name="additional-scripts" />
  </body>
</html>

---
import "../styles/global.css";
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tailwind Custom Template</title>
    <!-- Include your compiled Tailwind CSS -->
    <link href="dist/output.css" rel="stylesheet" />
  </head>
  <body class="font-primary text-base text-dark-gray">
    <!-- Header -->
    <header class="bg-base text-white p-6">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-3xl font-alt">Site Logo</h1>
        <nav>
          <ul class="flex space-x-4">
            <li>
              <a href="#" class="hover:text-white transition">Home</a>
            </li>
            <li>
              <a href="#" class="hover:text-white transition">About</a>
            </li>
            <li>
              <a href="#" class="hover:text-white transition">Services</a>
            </li>
            <li>
              <a href="#" class="hover:text-white transition">Contact</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto py-10">
      <!-- Section example -->
      <section class="py-16">
        <div class="text-center">
          <h2 class="text-4xl font-alt mb-5">Welcome to Our Site</h2>
          <p class="mb-5">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus
            lacinia odio vitae vestibulum vestibulum.
          </p>
          <a
            href="#"
            class="btn btn-link text-white bg-base px-6 py-3 rounded hover:bg-opacity-80 transition"
            >Learn More</a
          >
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-dark-gray text-medium-gray py-10">
      <div class="container mx-auto text-center">
        <p>&copy; 2025 Your Company. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

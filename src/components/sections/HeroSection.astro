---
// src/components/sections/HeroSection.astro
import { AtroposImage } from "../ui/AtroposImage";
import Counter from "../ui/Counter";
import { ParticlesBackground } from "../ui/ParticlesBackground";
---

<section
  class="min-h-screen relative overflow-hidden bg-charcoal-blue md:py-[70px] sm:py-[40px]"
>
  {/* Background Elements */}
  <div
    class="absolute inset-0 bg-center-top h-full w-full"
    style="background-image: url('/images/vertical-line-bg-small.svg')"
  >
  </div>
  <ParticlesBackground
    client:load
    options={{
      particles: {
        number: { value: 6, density: { enable: true, value_area: 2000 } },
        color: {
          value: ["#D79327", "#D79327", "#D79327", "#D79327", "#D79327"],
        },
        shape: { type: "circle", stroke: { width: 0, color: "#000000" } },
        opacity: { value: 1, random: false },
        size: { value: 8, random: true },
        move: { enable: true, speed: 1, direction: "right", random: false },
      },
    }}
  />

  <div class="absolute -left-20 top-1/4 animate-float">
    <img src="/images/demo-elearning-01.png" alt="" />
  </div>

  <div class="container mx-auto px-4 h-full">
    <div class="flex items-center justify-center min-h-[calc(100vh-140px)]">
      {/* Left Content */}
      <div
        class="w-full xl:w-5/12 lg:w-6/12 text-white text-center lg:text-left relative z-10
                  flex flex-col justify-center md:mt-[50px] md:mb-[20px] xs:mb-[10px]"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        <span
          class="font-alt text-[65px] leading-[75px] sm:text-[60px] font-bold mb-[25px] tracking-[-2px]"
        >
          一生の友と、<br />一生の成長を。
        </span>

        <div
          class="mb-[30px] w-4/5 md:w-3/5 sm:w-full mx-auto lg:mx-0 overflow-hidden"
        >
          <span class="text-[24px] font-normal opacity-50 inline-block">
            新しい一歩を、ここから
          </span>
        </div>

        <div
          class="overflow-hidden flex items-center gap-6 justify-center lg:justify-start"
        >
          <a
            href="/contact"
            class="btn bg-base text-white rounded-full px-8 py-4 font-semibold inline-flex items-center
                    hover:bg-opacity-90 transition-all duration-300"
          >
            <span class="mr-2">もっと詳しく</span>
            <span class="i-lucide-arrow-right"></span>
          </a>

          <a
            href="https://www.youtube.com/watch?v=cfXHhfNy7tU"
            class="btn text-white flex items-center gap-2 hover:opacity-80 transition-all duration-300"
          >
            <span>紹介動画</span>
            <span class="i-lucide-youtube"></span>
          </a>
        </div>

        {/* Counter Section */}
        <div
          class="grid grid-cols-3 justify-center w-full md:w-auto absolute lg:relative
                    bottom-20 lg:bottom-0 lg:mt-[50px]"
        >
          <Counter number={260} label="Tutors" />
          <Counter number={5340} label="Students" />
          <Counter number={280} label="Courses" />
        </div>
      </div>

      {/* Right Content - Atropos Image */}
      <div class="w-full xl:w-7/12 lg:w-6/12 pt-[30px] lg:pt-0">
        <AtroposImage
          client:load
          wrapperClassName="relative -right-10 md:right-0"
          images={[
            {
              src: "/images/jccc-hero-image2.png",
              offset: -1,
              className: "absolute inset-x-0",
            },
            {
              src: "/images/demo-elearning-hero-banner-02.png",
              offset: 1,
              className: "relative z-10 animate-float",
            },
          ]}
        />
      </div>
    </div>
  </div>
</section>

---
// Define props

// Import logo images
import logoBlue from "../assets/images/logo-blue.png";
import logoBlue2x from "../assets/images/logo-blue@2x.png";
import logoWhite from "../assets/images/logo-white.png";
import logoWhite2x from "../assets/images/logo-white@2x.png";
interface Props {
  transparent?: boolean;
}

const { transparent = true } = Astro.props;

// Navigation items
const navItems = [
  { label: "Home", url: "/" },
  { label: "About", url: "/about" },
  {
    label: "Courses",
    url: "/courses",
    dropdown: [
      {
        icon: "bi bi-laptop",
        title: "Development",
        description: "Develop professional skills",
        url: "/courses/development",
      },
      {
        icon: "bi bi-briefcase",
        title: "Business",
        description: "Advance your business",
        url: "/courses/business",
      },
      {
        icon: "bi bi-vector-pen",
        title: "Design",
        description: "Design skills & concepts",
        url: "/courses/design",
      },
      {
        icon: "bi bi-megaphone",
        title: "Marketing",
        description: "New age marketing skills",
        url: "/courses/marketing",
      },
    ],
  },

  { label: "Contact", url: "/contact" },
];
---

<header>
  <!-- start navigation -->
  <nav
    class={`navbar navbar-expand-lg ${
      transparent
        ? "header-transparent bg-base-color glass-effect header-reverse"
        : ""
    }`}
    data-header-hover="light"
  >
    <div class="container-fluid">
      <div class="col-auto col-lg-2 me-lg-0 me-auto">
        <a href="/" class="navbar-brand">
          <img
            src={logoWhite.src}
            alt="JCCC"
            class="default-logo"
            data-at2x={logoWhite2x.src}
            width={logoWhite.width}
            height={logoWhite.height}
          />
          <img
            src={logoBlue.src}
            alt="JCCC"
            class="alt-logo"
            data-at2x={logoBlue2x.src}
            width={logoBlue.width}
            height={logoBlue.height}
          />
          <img
            src={logoBlue.src}
            alt="JCCC"
            class="mobile-logo"
            data-at2x={logoBlue2x.src}
            width={logoBlue.width}
            height={logoBlue.height}
          />
        </a>
      </div>
      <div class="col-auto col-lg-8 menu-order position-static">
        <button
          class="navbar-toggler float-start"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-line"></span>
          <span class="navbar-toggler-line"></span>
          <span class="navbar-toggler-line"></span>
          <span class="navbar-toggler-line"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-center"
          id="navbarNav"
        >
          <ul class="navbar-nav alt-font">
            {
              navItems.map((item) => (
                <li
                  class={`nav-item ${item.dropdown ? "dropdown dropdown-with-icon" : ""}`}
                >
                  <a href={item.url} class="nav-link">
                    {item.label}
                  </a>
                  {item.dropdown && (
                    <>
                      <i
                        class="fa-solid fa-angle-down dropdown-toggle"
                        id="navbarDropdownMenuLink"
                        role="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                      />
                      <ul
                        class="dropdown-menu"
                        aria-labelledby="navbarDropdownMenuLink"
                      >
                        {item.dropdown.map((dropdownItem) => (
                          <li>
                            <a href={dropdownItem.url}>
                              <i class={dropdownItem.icon} />
                              <div class="submenu-icon-content">
                                <span>{dropdownItem.title}</span>
                                <p>{dropdownItem.description}</p>
                              </div>
                            </a>
                          </li>
                        ))}
                      </ul>
                    </>
                  )}
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="col-auto text-end d-none d-sm-flex">
        <div class="header-icon">
          <div class="header-button">
            <a
              href="mailto:info@domain.com"
              class="btn border-1 btn-transparent-light-gray btn-medium left-icon btn-switch-text"
            >
              <span>
                <span><i class="fa-regular fa-envelope"></i></span>
                <span class="btn-double-text" data-text="Send a message"
                  >お問い合わせ</span
                >
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <!-- end navigation -->
</header>
<style>
  /* Ensure logos maintain proper aspect ratio */
  .navbar-brand img {
    max-height: 60px;
    width: auto;
    aspect-ratio: auto;
  }
</style>

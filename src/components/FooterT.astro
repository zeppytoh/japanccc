---
/* Footer.astro */
---

<footer
  class="relative bg-[#1d1d1d] pt-4 pb-4 sm:pb-[50px] text-white"
  style="background-image: url('/images/demo-branding-agency-pattern.svg'); background-repeat: repeat-x repeat-y; background-position: center;"
>
  <!-- Container -->
  <div class="mx-auto max-w-7xl px-4">
    <!-- Top row using flexbox to control order -->
    <div class="flex flex-wrap gap-y-8 mb-6 items-start">
      <!-- Logo (order-1 on small, order-4 on md+) -->
      <div class="w-full md:w-auto flex-shrink-0 px-2 order-1 md:order-4">
        <a href="demo-branding-agency.html" class="inline-block">
          <img
            src="/images/demo-branding-agency-white-logo.png"
            alt="Logo"
            class="h-8 w-auto"
          />
        </a>
      </div>

      <!-- Large text & contact info (order-2 on small, order-1 on md+) -->
      <div class="w-full md:w-1/2 px-2 order-2 md:order-1">
        <h3 class="text-xl lg:text-2xl font-medium mb-8 sm:mb-6 leading-tight">
          Letâ€™s make something great work together.
        </h3>
        <div class="flex flex-wrap gap-y-4">
          <!-- Phone -->
          <div class="w-1/2 pr-4">
            <span class="block text-[0.7rem] uppercase tracking-wider mb-1"
              >Call our office</span
            >
            <a href="tel:12345678910" class="hover:underline">+1 234 567 8910</a
            >
          </div>
          <!-- Email -->
          <div class="w-1/2">
            <span class="block text-[0.7rem] uppercase tracking-wider mb-1"
              >Send a message</span
            >
            <a href="mailto:info@domain.com" class="hover:underline"
              >info@domain.com</a
            >
          </div>
        </div>
      </div>

      <!-- Company Links (order-3 on small, order-2 on md+) -->
      <div class="w-1/2 md:w-1/6 px-2 order-3 md:order-2">
        <span class="block text-[0.7rem] uppercase tracking-wider mb-2"
          >Company</span
        >
        <ul class="space-y-1">
          <li>
            <a href="demo-branding-agency.html" class="hover:text-gray-200"
              >Home</a
            >
          </li>
          <li>
            <a
              href="demo-branding-agency-about.html"
              class="hover:text-gray-200">Agency</a
            >
          </li>
          <li>
            <a
              href="demo-branding-agency-services.html"
              class="hover:text-gray-200">Services</a
            >
          </li>
          <li>
            <a
              href="demo-branding-agency-portfolio.html"
              class="hover:text-gray-200">Portfolio</a
            >
          </li>
          <li>
            <a
              href="demo-branding-agency-contact.html"
              class="hover:text-gray-200">Contact</a
            >
          </li>
        </ul>
      </div>

      <!-- Follow Us (order-4 on small, order-3 on md+) -->
      <div class="w-1/2 md:w-1/6 px-2 order-4 md:order-3">
        <span class="block text-[0.7rem] uppercase tracking-wider mb-2"
          >Follow Us</span
        >
        <ul class="space-y-1">
          <li>
            <a
              href="https://www.pinterest.com/"
              target="_blank"
              rel="noreferrer"
              class="hover:text-gray-200"
            >
              Pinterest
            </a>
          </li>
          <li>
            <a
              href="http://www.twitter.com"
              target="_blank"
              rel="noreferrer"
              class="hover:text-gray-200"
            >
              Twitter
            </a>
          </li>
          <li>
            <a
              href="http://www.dribbble.com"
              target="_blank"
              rel="noreferrer"
              class="hover:text-gray-200"
            >
              Dribbble
            </a>
          </li>
          <li>
            <a
              href="http://www.instagram.com"
              target="_blank"
              rel="noreferrer"
              class="hover:text-gray-200"
            >
              Instagram
            </a>
          </li>
          <li>
            <a
              href="http://www.behance.com"
              target="_blank"
              rel="noreferrer"
              class="hover:text-gray-200"
            >
              Behance
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom row -->
    <div
      class="flex flex-col md:flex-row md:justify-between md:items-center gap-y-4"
    >
      <!-- Terms text -->
      <div class="md:w-7/12 text-sm leading-relaxed">
        <p>
          This site is protected by reCAPTCHA and the Google privacy policy and
          terms of service apply. You must not use this website if you disagree
          with any of these website standard terms and conditions.
        </p>
      </div>
      <!-- Copyright -->
      <div class="md:w-5/12 md:text-right text-sm">
        <p>
          &copy; 2024 Crafto is Powered by
          <a
            href="https://www.themezaa.com/"
            target="_blank"
            rel="noreferrer"
            class="underline hover:text-gray-200"
          >
            ThemeZaa
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
